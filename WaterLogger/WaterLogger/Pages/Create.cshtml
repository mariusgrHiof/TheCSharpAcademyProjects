@page
@model WaterLogger.Pages.CreateModel
@{
}

<h3>Create water log</h3>

<div class="row">
    <div class="col-sm-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="WaterLog.Date" class="control-label"></label>
                <input type="date" asp-for="WaterLog.Date" class="form-control"/>
                <span asp-validation-for="WaterLog.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WaterLog.Quantity" class="control-label"></label>
                <input type="number" asp-for="WaterLog.Quantity" class="form-control" />
                <span asp-validation-for="WaterLog.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}