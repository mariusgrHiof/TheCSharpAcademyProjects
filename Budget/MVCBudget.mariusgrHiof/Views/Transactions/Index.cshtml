@model List<MVCBudget.mariusgrHiof.Models.Transaction>;
@{
    ViewData["Title"] = "Transactions Page";
}

@if (Model.Count > 0)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model[0].Id)</th>
                <th scope="col">@Html.DisplayNameFor(model => model[0].Name)</th>
                <th scope="col">@Html.DisplayNameFor(model => model[0].Amount)</th>
                <th scope="col">@Html.DisplayNameFor(model => model[0].Category.Name)</th>
                <th scope="col">@Html.DisplayNameFor(model => model[0].Date)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr class="table-default">
                    <td>@Html.DisplayFor(m => transaction.Id)</td>
                    <td>@Html.DisplayFor(m => transaction.Name)</td>
                    <td>@Html.DisplayFor(m => transaction.Amount)</td>
                    <td>@Html.DisplayFor(m => transaction.Category.Name)</td>
                    <td>@Html.DisplayFor(m => transaction.Date)</td>
                    <td>
                        <a button type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@transaction.Id">Delete</a>
                        <a button type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@transaction.Id">Edit</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <p>No movies.</p>
}