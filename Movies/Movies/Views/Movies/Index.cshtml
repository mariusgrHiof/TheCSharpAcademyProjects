@model List<Movies.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}
<h3>Movies</h3>

<a button type="button" class="btn btn-primary" asp-controller="Movies" asp-action="Create">Add Movie</a>
<br />
<br />

<form asp-action="Index" asp-controller="Movies" method="get">
    <input type="text" name="searchString" />
    <input button type="submit" value="Filter" />
</form>


@if (Model.Count > 0)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model[0].Title)</th>
                <th scope="col">@Html.DisplayNameFor(model => model[0].Genre)</th>
                <th scope="col">@Html.DisplayNameFor(model => model[0].Year)</th>
                <th scope="col">@Html.DisplayNameFor(model => model[0].DurationInMinutes)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Movie in Model)
            {
                <tr class="table-default">
                    <td>@Html.DisplayFor(m => Movie.Title)</td>
                    <td>@Html.DisplayFor(m => Movie.Genre)</td>
                    <td>@Html.DisplayFor(m => Movie.Year)</td>
                    <td>@Html.DisplayFor(m => Movie.DurationInMinutes)</td>
                    <td>
                        <a button type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@Movie.Id">Delete</a>
                        <a button type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@Movie.Id">Edit</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <p>No movies.</p>
}